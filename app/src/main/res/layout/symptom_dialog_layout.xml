<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="24dp"
android:layout_marginTop="24dp"
android:layout_marginLeft="24dp"
android:layout_marginRight="24dp"
android:layout_marginBottom="24dp">
<TextView
    android:id="@+id/symptom_dialog_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="@dimen/abc_text_size_title_material"
    android:layout_marginBottom="20dp"/>
<TextView
    android:id="@+id/description_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/discomfort_dialog_text"
    android:textColor="@color/abc_secondary_text_material_light"
    android:textSize="@dimen/abc_text_size_caption_material"
    android:layout_marginBottom="8dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ToggleButton
            android:id="@+id/low_button"
            android:textOff="@string/low_button"
            android:textOn="@string/low_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ToggleButton
            android:id="@+id/avg_button"
            android:textOff="@string/avg_button"
            android:textOn="@string/avg_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ToggleButton
            android:id="@+id/hi_button"
            android:textOff="@string/hi_button"
            android:textOn="@string/hi_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>
</LinearLayout>